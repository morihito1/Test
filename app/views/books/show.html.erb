      <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
      <% end %>
      
      <% if flash[:success] %>
      <p class="success"><%= flash[:success] %></p>
      <% end %>
      
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      
      <%= render 'aa/info',user: @user%>
      
      <h2 class="mt-3">
      <%= render 'aa/new', book: @new_book  %>
      
      <div class='col-md-8 offset-md-1'>
        <h2>Book detail</h2>
        <table class='table table-hover table-inverse'>
        <tbody>
          <tr>
          <td>
            <% if @user.profile_image.present?%>
              <%= link_to attachment_image_tag(@user, :profile_image, :fill, 100, 100, format: 'jpeg'), user_path(@user.id) %>
            <% else %>
              <%= link_to image_tag('default-image.jpg'), user_path(@user.id) %>
            <% end %>
            <p><%= link_to @user.name,user_path(@user) %></p>
            </td>
          <td><%= link_to @book.title,book_path(@book.id)%></td>
          <td><%= @book.body %></td>
            <td>
              <% if @user.id == current_user.id %>
              <%= link_to 'Edit', edit_book_path(@book),class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger destroy", data: { confirm: "本当に消しますか？" }  %>
              <% end %>
            </td>
          </tr>
        </tbody>
        </table>
      </div>
    </div>
</main>