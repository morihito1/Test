<p id="notice"><%= flash[:notice] %></p>

 <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
    <%= render 'aa/info', user: @user %>
        
     <h2 class="mt-3">   
    <%= render 'aa/new', book: @book %>
      
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if book.user.profile_image.present? %>
                   <%= link_to user_path(book.user) do %>
                      <%= attachment_image_tag(book.user, :profile_image, :fill, 100, 100, format: 'jpeg') %>
                    <% end %>
                  <% else %>
                    <%= link_to user_path(book.user) do %>
                      <%= image_tag('default-image.jpg') %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>