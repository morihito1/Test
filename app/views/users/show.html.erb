      
      
      <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
      <% end %>
      
      <% if flash[:success] %>
      <p class="success"><%= flash[:success] %></p>
      <% end %>
      
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      
      
        <%= render 'aa/info', user: @user %>
        
        <%= render 'aa/new' , book: @book %>
        
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><% if @user.profile_image.present? %>
                      <%= link_to attachment_image_tag(@user, :profile_image, :fill, 100, 100, format: 'jpeg'),user_path(@user)%>
                      <% else %>
                       <%= link_to image_tag('/assets/default-image.jpg'), user_path(@user) %>
                      <% end %>
                  </td>
                  <td><%= link_to book.title,book_path(book) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>